[alias]
  co = checkout
  dev = checkout develop
  mas = checkout master
  ci = commit
  cp = cherry-pick
  lg = log --oneline --decorate
  st = status -uno
  amend = commit --amend
  br = branch
  tree = log --oneline --decorate --graph
  ticket = "!sh -c 'git log $1..$2 | grep -o "\""#[0-9]\\{5\\}"\"" | sort -u' -"
  pud = pull --rebase upstream develop
  pum = pull --rebase upstream master
  rb = rebase
  rbc = rebase --continue
  rba = rebase --abort
  rbi = rebase -i
  cmp = cherry -v
  spop = "!sh -c 'git stash pop stash@{$1}' -"
  sdrop = "!sh -c 'git stash drop stash@{$1}' -"
  sl = stash list
  cll = "!git branch --merged | grep -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"
  clr = "!git branch -r --merged | grep -v '\\*\\|master\\|develop' | sed 's/origin\\//:/' | xargs -n 1 git push origin"
[color]
  ui=true
  interactive=true
[color "branch"]
  current=green bold
  local=yellow bold
  remote=cyan bold
[color "diff"]
  meta=yellow bold
  frag=magenta bold
  old=red bold
  new=green bold
  whitespace=white reverse
[color "status"]
  added=green bold
  changed=yellow bold
  untracked=red bold
  branch=cyan bold
[merge]
  tool = vimdiff
[push]
  default = simple
[branch]
  autosetuprebase = always
[core]
  editor = vim
  preloadindex = true
  fscache = true
[commit]
  template = ~/.gitmessage
[gc]
  auto = 256
[filter "lfs"]
  required = true
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f