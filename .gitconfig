[alias]
  cmp = cherry -v
  lg = log --oneline --decorate
  tree = log --oneline --decorate --graph
  undo = reset --hard
  ticket = "!sh -c 'git log $1..$2 | grep -o "\""#[0-9]\\{5\\}"\"" | sort -u' -"
[color]
  ui=true
  interactive=true
[merge]
  tool = kdiff3
[push]
  default = simple
[branch]
  autosetuprebase = always
[core]
  editor = vim
  preloadindex = true
  fscache = true
[commit]
  template = ~/.gitmessage
[gc]
  auto = 256
[filter "lfs"]
  required = true
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
[rebase]
  autostash = true
