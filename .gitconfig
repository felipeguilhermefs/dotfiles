[branch]
	autosetuprebase = always
[color]
	ui=true
	interactive=true
[commit]
	template = ~/.gitmessage
	gpgsign = true
[core]
	editor = vim
	preloadindex = true
	fscache = true
	pager = delta
[delta]
	navigate = true    # use n and N to move between diff sections
[diff]
	colorMoved = default
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[gc]
	auto = 256
[gpg]
	program = gpg
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[merge]
	tool = vimdiff
	conflictstyle = diff3
[pager]
	branch = false
[pull]
	rebase = true
[push]
	default = simple
[rebase]
	autostash = true
