[alias]
  co = checkout
  dev = checkout develop
  mas = checkout master
  ci = commit
  cp = cherry-pick
  lg = log --oneline --decorate
  st = status -uno
  amend = commit --amend
  br = branch
  tree = log --oneline --decorate --graph
  ticket = log --oneline --format="%s" --grep="#[0-9]{5}"
  pullup = pull --rebase upstream
  rb = rebase
  rbc = rebase --continue
  rba = rebase --abort
  rbi = rebase -i
  cmp = cherry -v
  spop = "!sh -c 'git stash pop stash@{$1}' -"
  sdrop = "!sh -c 'git stash drop stash@{$1}' -"
  sl = stash list
[color]
  ui=true
  interactive=true
[color "branch"]
  current=green bold
  local=yellow bold
  remote=cyan bold
[color "diff"]
  meta=yellow bold
  frag=magenta bold
  old=red bold
  new=green bold
  whitespace=white reverse
[color "status"]
  added=green bold
  changed=yellow bold
  untracked=red bold
  branch=cyan bold
[push]
  default = simple
[branch]
  autosetuprebase = always
[core]
  editor = vim
[commit]
  template = ~/.gitmessage
